<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.AddAssetController">
    <children>
        <Label text="Ajukan Aset Baru" layoutX="100" layoutY="20" style="-fx-font-size: 20px;" />
        <Label text="Nama Aset:" layoutX="50" layoutY="80"/>
        <TextField fx:id="nameField" layoutX="150" layoutY="75" prefWidth="200"/>
        
        <Label text="Kategori:" layoutX="50" layoutY="120"/>
        <ComboBox fx:id="categoryBox" layoutX="150" layoutY="115" prefWidth="200"/>

        <Label text="Deskripsi:" layoutX="50" layoutY="160"/>
        <TextArea fx:id="descriptionField" layoutX="150" layoutY="155" prefWidth="200" prefHeight="60"/>

        <Button text="Ajukan" layoutX="150" layoutY="230" onAction="#submitAsset"/>
        <Button text="Batal" layoutX="250" layoutY="230" onAction="#closeForm"/>
    </children>
</AnchorPane>
