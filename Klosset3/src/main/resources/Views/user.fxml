<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controllers.UserDashboardController">
    <children>
        <Label layoutX="150" layoutY="20" style="-fx-font-size: 24px;" text="User Dashboard" />
        <TableView fx:id="assetsTable" layoutX="50" layoutY="80" prefHeight="300" prefWidth="500">
            <columns>
                <TableColumn fx:id="colName" text="Nama Aset" />
                <TableColumn fx:id="colCategory" text="Kategori" />
                <TableColumn fx:id="colStatus" text="Status" />
            </columns>
        </TableView>
        <Button layoutX="206.0" layoutY="400.0" onAction="#openAddAssetForm" text="Ajukan Aset" />
        <Button layoutX="120.0" layoutY="400.0" onAction="#logactivity" text="Log" />
        <Button fx:id="logoutButton" layoutX="350" layoutY="400" onAction="#logout" text="Logout" />
    </children>
</AnchorPane>
